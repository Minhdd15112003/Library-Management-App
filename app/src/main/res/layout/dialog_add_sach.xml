<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="10dp"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:text="Thêm sách"
            android:textColor="@color/teal_200"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtAddTenSachDialog"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/editcustom"
            android:hint=" Nhập Tên Sách "
            android:textColor="@color/black"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/txtAddgiaThueDialog"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/editcustom"
            android:hint=" Nhập giá thuê"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <Spinner
            android:id="@+id/spnLoaiSach"
            android:layout_width="match_parent"

            android:layout_height="28dp" />

        <Button
            android:id="@+id/btnthemA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bkg_button"
            android:text="Xác nhận"
            android:textColor="@color/white"
            android:textSize="22dp" />
    </LinearLayout>


</androidx.cardview.widget.CardView>